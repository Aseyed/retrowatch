<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    
<LinearLayout
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="14sp"
        android:paddingBottom="12dp" />

    <TextView
        android:id="@+id/deviceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device: (not selected)"
        android:textSize="14sp"
        android:paddingBottom="12dp" />

    <!-- Output area (like App Inventor) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="12dp">
        <TextView
            android:id="@+id/outputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:gravity="top|start"
            android:fontFamily="monospace" />
    </ScrollView>

    <Button
        android:id="@+id/startServiceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start companion service" />

    <Button
        android:id="@+id/stopServiceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop companion service"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/openNotiAccessBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grant notification access"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/pickDeviceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick paired Bluetooth device"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/connectBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/disconnectBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:layout_marginTop="8dp" />

    <!-- Send Data Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Data"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/messageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter message to send"
        android:inputType="text"
        android:padding="8dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/sendMessageBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Message"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/sendClockBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Clock Data"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/sendBatteryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Battery Status"
        android:layout_marginTop="8dp" />

</LinearLayout>

</ScrollView>


